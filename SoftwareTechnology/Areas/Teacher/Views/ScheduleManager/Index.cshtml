@model SoftwareTechnology.Areas.Teacher.Models.ManagerClass
@{
    ViewBag.Title = "Quản lý lịch dạy";
    Layout = "~/Areas/Teacher/Views/Shared/_LayoutTeacher.cshtml";
}
<div class="col-sm-10 clear">
    <div class="content-body" style="height:auto;">
        @RenderPage("~/Views/Shared/_Logout.cshtml")
        <div class="col-sm-12">
            <div class="col-sm-12 clear"><a class="btn btn-primary" data-toggle="modal" data-target="#ClassRegister"><span class="glyphicon glyphicon-plus"></span> Thêm đăng ký</a></div>
            <div class="modal fade" id="ClassRegister">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <a class="close" data-dismiss="modal">&times;</a>
                            <h4 class="modal-title">Thêm đăng ký lớp</h4>
                        </div>
                        <div class="modal-body">
                            <form id="ClassSubmit">
                                <div class="form-group col-sm-12" style="height:25px;">
                                    <div class="col-sm-5">@Html.Label("Môn học:", new { @class = "label-style2" })</div>
                                    <div class="col-sm-7">
                                        @Html.DropDownListFor(Model => Model.Insert.subjectID, ViewBag.ListSubjectDrop as SelectList, null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-12" style="width:auto; height:10px;"></div>
                                <div class="form-group col-sm-12" style="height:25px;">
                                    <div class="col-sm-5">@Html.Label("Ngày học:", new { @class = "label-style2" })</div>
                                    <div class="col-sm-7">
                                        @Html.DropDownListFor(Model => Model.Insert.dayID, ViewBag.ListDay as SelectList, null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-12" style="width:auto; height:10px;"></div>
                                <div class="form-group col-sm-12" style="height:25px;">
                                    <div class="col-sm-5">@Html.Label("Ca học:", new { @class = "label-style2" })</div>
                                    <div class="col-sm-7">
                                        @Html.DropDownListFor(Model => Model.Insert.timeID, ViewBag.ListTime as SelectList, null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-12" style="width:auto; height:10px;"></div>
                                <div class="form-group col-sm-12" style="height:25px;">
                                    <div class="col-sm-5">@Html.Label("Phòng học:", new { @class = "label-style2" })</div>
                                    <div class="col-sm-7">
                                        @Html.DropDownListFor(Model => Model.Insert.roomID, ViewBag.ListRoom as SelectList, null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </form>
                            <div style="text-align:center;display:none;" id="loading-gif">
                                <img src="~/Content/Image/loading.gif" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-default" onclick="CloseClassRegister()">Cancel</a>
                            <a class="btn btn-success" onclick="InsertClass()">Submit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12" style="height:15px;"></div>
        @if (ViewBag.ListClass != null)
        {
            <div class="col-sm-12">
                <div class="panel-group">
                    <div class="panel panel-primary">
                        <div class="panel-heading"><h3>Thời khóa biểu</h3></div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã lớp</th>
                                        <th>Loại lớp</th>
                                        <th style="width:15%;">Tên môn</th>
                                        <th>Ngày</th>
                                        <th>Giờ</th>
                                        <th>Phòng</th>
                                        <th>SL sinh viên</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày kết thúc</th>
                                        <th>Show</th>
                                    </tr>
                                </thead>
                                @foreach (var item in ViewBag.ListClass)
                                {
                                    if (item.statusID == 3 && item.branchID == (int)Session["branchID"])
                                    {
                                        <tbody>
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.classType</td>
                                                <td>@item.subject</td>
                                                <td>@item.day</td>
                                                <td>@item.time</td>
                                                <td>@item.room</td>
                                                <td>@item.numberOfStudent</td>
                                                <td style="color:lawngreen;">@item.status</td>
                                                <td>@item.dayStart.Date.ToString("dd/MM/yyyy")</td>
                                                <td>@item.dayEnd.Date.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <a class="btn btn-primary" onclick="ShowListStudent(@item.ID)" id="Show-@item.ID"><i class="glyphicon glyphicon-circle-arrow-down"></i></a>
                                                    <a class="btn btn-success" onclick="HideListStudent(@item.ID)" style="display:none;" id="Hide-@item.ID"><i class="glyphicon glyphicon-circle-arrow-up"></i></a>
                                                </td>
                                            </tr>
                                        </tbody>
                                        <tbody style="display:none;" id="ListStudentOfClass-@item.ID">
                                            <tr>
                                                <td colspan="11">
                                                    <table class="table table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>Mã sinh viên</th>
                                                                <th>Tên sinh viên</th>
                                                                <th>Giới tính</th>
                                                                <th>Ngày sinh</th>
                                                                <th>Quê quán</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (ViewBag.ListStudent != null)
                                                            {
                                                                foreach (var item1 in ViewBag.ListStudent)
                                                                {
                                                                    if (item.ID == item1.classID)
                                                                    {
                                                                        <tr>
                                                                            <td>@item1.studentID</td>
                                                                            <td>@item1.studentName</td>
                                                                            <td>@item1.gender</td>
                                                                            <td>@item1.birth.Date.ToString("dd/MM/yyyy")</td>
                                                                            <td>@item1.country</td>
                                                                        </tr>
                                                                    }
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="col-sm-12" style="height:15px;"></div>
        <div class="modal fade" id="ConfirmDelete">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a class="close" data-dismiss="modal">&times;</a>
                        <h4 class="modal-title">Xác nhận xóa lớp</h4>
                    </div>
                    <div class="modal-body">
                        <h4>Bạn có chắc chắn muốn xóa?</h4>
                        <div style="text-align:center;display:none;" id="loading-gif1">
                            <img src="~/Content/Image/loading.gif" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-default" onclick="CloseClassDelete()">Cancel</a>
                        <a class="btn btn-success" onclick="DeleteClass()">Confirm</a>
                    </div>
                </div>
            </div>
        </div>
        @if (ViewBag.ListClass != null)
        {
            <div class="col-sm-12">
                <div class="panel-group">
                    <div class="panel panel-primary">
                        <div class="panel-heading"><h3>Các lớp đã đăng ký</h3></div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="width:7%;">Mã lớp</th>
                                        <th style="width:14%;">Loại lớp</th>
                                        <th>Tên môn</th>
                                        <th style="width:8.5%;">Ngày</th>
                                        <th style="width:5.5%;">Giờ</th>
                                        <th>Phòng</th>
                                        <th>SL sinh viên</th>
                                        <th>Trạng thái</th>
                                        <th>Sửa</th>
                                        <th>Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.ListClass)
                                    {
                                        if (item.branchID == (int)Session["branchID"] && item.statusID != 3 && item.classTypeID == 1)
                                        {
                                            if (item.statusID == 4)
                                            {
                                                DateTime dt = item.dayStart;
                                                if (DateTime.Now > dt.AddDays(-5))
                                                {
                                                    //
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td>@item.ID</td>
                                                        <td>@item.classType</td>
                                                        <td>@item.subject</td>
                                                        <td>@item.day</td>
                                                        <td>@item.time</td>
                                                        <td>@item.room</td>
                                                        <td style="color:red;">@item.numberOfStudent / 15</td>
                                                        <td style="color: orangered;">@item.status</td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                }
                                            }
                                            else if (item.statusID == 2)
                                            {
                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td>@item.classType</td>
                                                    <td>@item.subject</td>
                                                    <td>@item.day</td>
                                                    <td>@item.time</td>
                                                    <td>@item.room</td>
                                                    <td>@item.numberOfStudent / 15</td>
                                                    <td style="color: dodgerblue;">@item.status</td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td>@item.classType</td>
                                                    <td>@item.subject</td>
                                                    <td>@item.day</td>
                                                    <td>@item.time</td>
                                                    <td>@item.room</td>
                                                    <td>@item.numberOfStudent / 15</td>
                                                    <td style="color: gray;">@item.status</td>
                                                    <td><a class="btn btn-warning" onclick="UpdateDialog(@item.ID,@item.subjectID,@item.dayID,@item.timeID,@item.roomID)"><i class="glyphicon glyphicon-edit"></i></a></td>
                                                    <td><a class="btn btn-danger" onclick="DeleteDialog(@item.ID)"><i class="glyphicon glyphicon-trash"></i></a></td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="modal fade" id="ConfirmUpdate">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a class="close" data-dismiss="modal">&times;</a>
                        <h4 class="modal-title">Cập nhật lớp</h4>
                    </div>
                    <div class="modal-body">
                        <form id="ClassUpdateSubmit">
                            <div class="form-group col-sm-12" style="height:25px;">
                                <div class="col-sm-5">@Html.Label("Môn học:", new { @class = "label-style2" })</div>
                                <div class="col-sm-7">
                                    @Html.DropDownListFor(Model => Model.Update.subjectID, ViewBag.ListSubjectDrop as SelectList, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-sm-12" style="width:auto; height:10px;"></div>
                            <div class="form-group col-sm-12" style="height:25px;">
                                <div class="col-sm-5">@Html.Label("Ngày học:", new { @class = "label-style2" })</div>
                                <div class="col-sm-7">
                                    @Html.DropDownListFor(Model => Model.Update.dayID, ViewBag.ListDay as SelectList, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-sm-12" style="width:auto; height:10px;"></div>
                            <div class="form-group col-sm-12" style="height:25px;">
                                <div class="col-sm-5">@Html.Label("Ca học:", new { @class = "label-style2" })</div>
                                <div class="col-sm-7">
                                    @Html.DropDownListFor(Model => Model.Update.timeID, ViewBag.ListTime as SelectList, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-sm-12" style="width:auto; height:10px;"></div>
                            <div class="form-group col-sm-12" style="height:25px;">
                                <div class="col-sm-5">@Html.Label("Phòng học:", new { @class = "label-style2" })</div>
                                <div class="col-sm-7">
                                    @Html.DropDownListFor(Model => Model.Update.roomID, ViewBag.ListRoom as SelectList, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div style="display:none;">@Html.TextBoxFor(Model => Model.Update.classID)</div>
                        </form>
                        <div style="text-align:center;display:none;" id="loading-gif2">
                            <img src="~/Content/Image/loading.gif" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-default" onclick="CloseClassUpdate()">Cancel</a>
                        <a class="btn btn-success" onclick="UpdateClass()">Confirm</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12" style="height:20px;"></div>
        <input type="hidden" id="GetID" />
    </div>
</div>
<script>
    var InsertClass = function () {
        var data = $("#ClassSubmit").serialize();
        $("#loading-gif").show();
        $.ajax({
            type: "Post",
            url: "/Teacher/ScheduleManager/InsertClass",
            data: data,
            success: function (check) {
                if (check == "true") {
                    window.location.reload(true);
                }
                else {
                    $("#loading-gif").hide();
                    alert(check);
                }
            }
        })
    }
    var CloseClassRegister = function () {
        $("#ClassRegister").modal("hide");
    }
    var DeleteDialog = function (ClassID) {
        $("#GetID").val(ClassID);
        $("#ConfirmDelete").modal("show");
    }
    var CloseClassDelete = function () {
        $("#ConfirmDelete").modal("hide");
    }
    var DeleteClass = function () {
        $("#loading-gif1").show();
        var ClassID = $("#GetID").val();
        $.ajax({
            type: "Post",
            url: "/Teacher/ScheduleManager/DeleteClass",
            data: { ClassID: ClassID },
            success: function (message) {
                if (message == "true") {
                    window.location.reload(true);
                }
                else {
                    $("#loading-gif1").hide();
                    $("#ConfirmDelete").modal("hide");
                    alert("Lớp đang được mở không thể xóa");
                }
            }
        })
    }
    var UpdateDialog = function (ClassID) {
        $("#GetID").val(ClassID);
        $.ajax({
            type: "Post",
            url: "/Teacher/ScheduleManager/ShowUpdate",
            data: { ClassID: ClassID },
            success: function (list) {
                if (list != "false") {
                    var splited = list.split("-");
                    $("#Update_subjectID").val(parseInt(splited[0]));
                    $("#Update_dayID").val(parseInt(splited[1]));
                    $("#Update_timeID").val(parseInt(splited[2]));
                    $("#Update_roomID").val(parseInt(splited[3]));
                    $("#ConfirmUpdate").modal("show");
                }
            }
        })
    }
    var CloseClassUpdate = function () {
        $("#ConfirmUpdate").modal("hide");
    }
    var UpdateClass = function () {
        $("#loading-gif2").show();
        $("#Update_classID").val($("#GetID").val());
        var data = $("#ClassUpdateSubmit").serialize();
        $.ajax({
            type: "Post",
            url: "/Teacher/ScheduleManager/UpdateClass",
            data: data,
            success: function (bool) {
                if (bool == "true")
                    window.location.reload(true);
                else {
                    $("#loading-gif2").hide();
                    alert(bool);
                }
            }
        })
    }
    var ShowListStudent = function (ClassID) {
        var id = "#ListStudentOfClass-" + ClassID;
        var idShow = "#Show-" + ClassID;
        var idHide = "#Hide-" + ClassID;
        $(id).show();
        $(idShow).hide();
        $(idHide).show();
    }
    var HideListStudent = function (ClassID) {
        var id = "#ListStudentOfClass-" + ClassID;
        var idShow = "#Show-" + ClassID;
        var idHide = "#Hide-" + ClassID;
        $(id).hide();
        $(idShow).show();
        $(idHide).hide();
    }
</script>
