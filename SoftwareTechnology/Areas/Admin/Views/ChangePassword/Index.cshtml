@model SoftwareTechnology.Models.DAO.UpdateAccountModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-sm-10 clear">
    <div class="content-body">
        <div class="col-sm-12">
            <div class="clearfix"></div>
            <div class="panel-group login-box">
                <div class="panel panel-primary">
                    <div class="panel-heading login-header"><h3 id="login-header-text">Đăng nhập</h3></div>
                    <div class="panel-body">
                        <form id="login-form">
                            <div class="form-group col-sm-12">
                                <div class="col-sm-5">@Html.Label("Mật khẩu cũ:", new { @class = "label-style" })</div>
                                <div class="col-sm-7">
                                    @Html.PasswordFor(Model => Model.userName, new { @class = "form-control", @placeholder = "Tên tài khoản...", @autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(Model => Model.userName, "", new { @class = "error-message" })
                                </div>

                            </div>
                            <div class="col-sm-12" style="width:auto; height:30px;"></div>
                            <div class="form-group col-sm-12">
                                <div class="col-sm-5">@Html.Label("Mật khẩu mới:", new { @class = "label-style" })</div>
                                <div class="col-sm-7">
                                    @Html.PasswordFor(Model => Model.passWord, new { @class = "form-control", @placeholder = "Mật khẩu..." })
                                    @Html.ValidationMessageFor(Model => Model.passWord, "", new { @class = "error-message" })
                                </div>
                            </div>
                            <div class="col-sm-12" style="width:auto; height:30px;"></div>
                            <div class="form-group col-sm-12">
                                <div class="col-sm-5">@Html.Label("Xác nhận mật khẩu mới:", new { @class = "label-style" })</div>
                                <div class="col-sm-7">
                                    @Html.PasswordFor(Model => Model.passWord, new { @class = "form-control", @placeholder = "Mật khẩu..." })
                                    @Html.ValidationMessageFor(Model => Model.passWord, "", new { @class = "error-message" })
                                </div>
                            </div>
                            <a class="btn btn-primary button-submit" onclick="VerifyLogin()">Đăng nhập</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

